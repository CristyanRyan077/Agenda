<UserControl x:Class="AgendaNovo.Controles.PagamentosControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:AgendaNovo.Controles" xmlns:viewmodels="clr-namespace:AgendaNovo.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:PagamentosViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2F2F2F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0 HEADER -->
            <RowDefinition Height="Auto"/>
            <!-- 1 RESUMO -->
            <RowDefinition Height="Auto"/>
            <!-- 2 FORM PAGAMENTO -->
            <RowDefinition Height="Auto"/>
            <!-- 3 FORM PRODUTO -->
            <RowDefinition Height="Auto"/>
            <!-- 4 FORM FOTOS -->
            <RowDefinition Height="*"/>
            <!-- 5 GRID HISTÓRICO -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                <TextBlock Text="{Binding ClienteNome}" FontSize="18" FontFamily="#Heveltica" Foreground="White" Margin="0,0,12,0"/>
                <TextBlock Text="{Binding ServicoNome}" FontSize="12" Foreground="#DDD" Margin="0,0,12,0"/>
                
            </StackPanel>
        </DockPanel>

        <!-- RESUMO -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,12">
            <Border Background="#3A3A3A" CornerRadius="10" Padding="10" Margin="4">
                <StackPanel>
                    <TextBlock Text="Valor" Foreground="#BBB"/>
                    <TextBlock Text="{Binding Valor, StringFormat=R$ {0:N2}}" Foreground="White" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="#3A3A3A" CornerRadius="10" Padding="10" Margin="4">
                <StackPanel>
                    <TextBlock Text="Pago" Foreground="#BBB"/>
                    <TextBlock Text="{Binding ValorPago, StringFormat=R$ {0:N2}}" Foreground="White" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="#3A3A3A" CornerRadius="10" Padding="10" Margin="4">
                <StackPanel>
                    <TextBlock Text="Falta" Foreground="#BBB"/>
                    <TextBlock Text="{Binding Falta, StringFormat=R$ {0:N2}}" Foreground="White" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="#3A3A3A" CornerRadius="10" Padding="10" Margin="4">
                <StackPanel>
                    <TextBlock Text="% Recebido" Foreground="#BBB"/>
                    <TextBlock Text="{Binding PercentualPago, StringFormat={}{0}%}" Foreground="White" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </UniformGrid>
        <!-- FORMULÁRIO DE PRODUTO -->
        <Border Grid.Row="3" Background="#3A3A3A" CornerRadius="12" Padding="16" Margin="0,0,0,6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="4"
                   Text="Adicionar Produto"
                   Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

                <!-- Produto -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Produto" Foreground="#BBB" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding ProdutosDisponiveis}"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedProdutoId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      hc:InfoElement.Placeholder="Selecione..." />
                </StackPanel>

                <!-- Quantidade -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,8,0">
                    <TextBlock Text="Qtd" Foreground="#BBB" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NovoProduto.Quantidade, Mode=TwoWay}" />
                </StackPanel>

                <!-- Valor Unitário -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,8,0">
                    <TextBlock Text="Valor Unitário" Foreground="#BBB" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NovoProduto.ValorUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!-- Botão -->
                <StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Button Content="Adicionar Produto"
                    Command="{Binding  AdicionarProdutoCommand}"
                    CommandParameter="Produto"
                    Padding="12,6"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- AÇÕES / FORMULÁRIO PRINCIPAL -->
        <Border Grid.Row="2" Background="#3A3A3A" CornerRadius="12" Padding="16" Margin="0,0,0,6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="5" 
                   Text="Adicionar Pagamento" 
                   Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

                <!-- Método -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Método" Foreground="#BBB" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Metodo}"
                    SelectedItem="{Binding NovoPagamento.Metodo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              hc:InfoElement.Placeholder="PIX, Crédito..." />
                </StackPanel>

                <!-- Observação -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,8,0">
                    <TextBlock Text="Observação" Foreground="#BBB" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NovoPagamento.Observacao}" />
                </StackPanel>

                <!-- Valor -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,8,0">
                    <TextBlock Text="Valor" Foreground="#BBB" Margin="0,0,0,4"/>
                    <TextBox Width="150" HorizontalAlignment="Left" Text="{Binding NovoPagamento.Valor}" />
                </StackPanel>

                <!-- Botão -->
                <StackPanel Grid.Row="1" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Button Content="{Binding EstaEditando, Converter={StaticResource BoolToTextConverter}}"
                     Command="{Binding SalvarOuAdicionarHistoricoCommand}"
                    Padding="12,6"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="4"  Background="#3A3A3A" CornerRadius="12" Margin="0,0,0,6" Padding="12">
            <Grid>
                

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Status das fotos:" Foreground="White" FontSize="14" Margin="0,0,18,0"/>
                <RadioButton Foreground="White" Content="Revelado" IsChecked="{Binding Path=Fotos, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Revelado}" />
                <RadioButton Foreground="Green" Content="Entregue" IsChecked="{Binding Path=Fotos, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Entregue}" Margin="8,0,0,0"/>
            </StackPanel>
                <Button Content="Salvar status das fotos"
                       
                        Command="{Binding SalvarStatusFotosCommand}"
                        Visibility="{Binding MostrarBotaoSalvarFotos, Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="#4CAF50" Foreground="White" FontWeight="Bold"
                        Padding="10,6" Margin="0,2,60,0" />
            </Grid>

        </Border>
 

        <!-- GRID -->
        <Border Grid.Row="5" Height="300" Background="#3A3A3A" CornerRadius="12" Padding="10">
            <DockPanel>
                <TextBlock Text="Histórico de Pagamentos" Foreground="White" FontWeight="Bold" FontSize="16" DockPanel.Dock="Top"/>
                <DataGrid ItemsSource="{Binding Historico}"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                              EnableRowVirtualization="True" EnableColumnVirtualization="True"
                              Width="900"
                              HorizontalAlignment="Left"
                              Margin="0,8,0,0" RowHeaderWidth="0" SelectedItem="{Binding ItemSelecionado}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=dd/MM/yyyy}" Width="*" />
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*" />
                        <DataGridTextColumn Header="Método" Binding="{Binding Metodo}" Width="*" />
                        <DataGridTextColumn Header="Observ." Binding="{Binding Descricao}" Width="2*" />
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=R$ {0:N2}}" Width="*" />
                        <DataGridTemplateColumn Header="" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Editar" Margin="0,0,6,0" Background="#E8FCFF"
                                                    Command="{Binding DataContext.SelecionarHistoricoParaEdicaoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"/>
                                        <Button Content="Excluir" 
                                                    Command="{Binding DataContext.ExcluirPagamentoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}" Background="#FFFFA6A6"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        
    </Grid>
</UserControl>
