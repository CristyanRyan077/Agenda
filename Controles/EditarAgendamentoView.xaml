<UserControl x:Class="AgendaNovo.Controles.EditarAgendamentoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:AgendaNovo.Controles" xmlns:agendanovo="clr-namespace:AgendaNovo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="#333">
            <StackPanel Width="200">
                <TextBlock Text="Editar Agendamento"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <hc:TextBox Margin="10" hc:InfoElement.Placeholder="Cliente" Foreground="Black"
                         Text="{Binding NovoCliente.Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Horário -->
                <hc:ComboBox ItemsSource="{Binding HorariosDisponiveis}" hc:InfoElement.Placeholder="Horario"
                      SelectedItem="{Binding HorarioTexto}" Width="150"/>

                <hc:ComboBox Name="txtservico"
                         IsEditable="True" IsTextSearchEnabled="True"
                        hc:InfoElement.Placeholder="Servico" Margin="10"
                         ItemsSource="{Binding ListaServicos}" DisplayMemberPath="Nome" SelectedValuePath="Id"
                         SelectedValue="{Binding NovoAgendamento.ServicoId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Pacote -->
                <hc:ComboBox ItemsSource="{Binding ListaPacotesFiltrada}"              SelectedValuePath="Id"
                      SelectedValue="{Binding NovoAgendamento.PacoteId}" hc:InfoElement.Placeholder="Pacote"
                      DisplayMemberPath="Nome"/>

                <!-- Tema -->
                <hc:TextBox Text="{Binding NovoAgendamento.Tema}" hc:InfoElement.Placeholder="Tema" Margin="10"/>

                <TextBlock Text="Valor:" HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,0"/>
                <TextBox Text="{Binding NovoAgendamento.Valor}" Width="200"/>
                <!-- Valor -->
                <TextBlock Text="Valor Pago:" HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,0"/>
                <TextBox Text="{Binding NovoAgendamento.ValorPago}" Width="200"/>

                <!-- Botões -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Excluir" Background="Red" Width="80" Command="{Binding ExcluirCommand}" Click="Button_Click_1" />
                    <Button Content="Salvar" Background="Green" Width="80" Command="{Binding AgendarCommand}" Click="Button_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
