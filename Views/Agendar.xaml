<Window x:Class="AgendaNovo.Agendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:vm="clr-namespace:AgendaNovo"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:AgendaViewModel}"
        Title="Agendar"
        MinWidth="1024" MinHeight="720"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <!-- BACKGROUND DE IMAGEM -->
    <Window.Background>
        <ImageBrush ImageSource="/Imagens/images.png" Stretch="UniformToFill"/>
    </Window.Background>

    <!-- CONTEÚDO SCROLLÁVEL -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Linha 0: Cliente e Telefone -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <hc:ComboBox Grid.Column="0" Width="300" Height="50"
                             hc:InfoElement.Placeholder="Cliente"
                             IsEditable="True" LostFocus="ComboBox_LostFocus"
                             DisplayMemberPath="Nome"
                             ItemsSource="{Binding ListaClientes}"
                             Text="{Binding NovoCliente.Nome}"
                             Background="#88D1D3D8" Foreground="Black" FontFamily="#heveltica" FontSize="24" FontWeight="Bold"
                             BorderBrush="Transparent" SelectionTextBrush="Black"/>
                <materialDesign:PackIcon Grid.Column="0" Kind="Account"
                                         Width="46" Height="46"
                                         
                                         HorizontalAlignment="Right" VerticalAlignment="Center"
                                         Foreground="White"/>

                <hc:ComboBox Name="txtTelefone" Grid.Column="1" Width="300" Height="50"
                             hc:InfoElement.Placeholder="Telefone"
                             Text="{Binding NovoCliente.Telefone}"
                             IsEditable="True"
                             Background="#88D1D3D8" Foreground="Black"   FontFamily="#heveltica" FontSize="24" FontWeight="Bold"
                             BorderBrush="Transparent" SelectionTextBrush="Black"/>
                <materialDesign:PackIcon Grid.Column="1" Kind="Phone"
                                         Width="24" Height="24"
                                         Margin="270,5,0,0"
                                         HorizontalAlignment="Left" VerticalAlignment="Center"
                                         Foreground="White"/>
            </Grid>

            <!-- Linha 1: Pacote e Horário -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <hc:ComboBox Grid.Column="0" Width="300" Height="50"
                             hc:InfoElement.Placeholder="Pacote"
                             Text="{Binding NovoAgendamento.Pacote}"
                             FontSize="20">
                    <hc:AutoCompleteTextBoxItem Content="Acompanhamento Infantil"/>
                    <hc:AutoCompleteTextBoxItem Content="Smash the cake"/>
                </hc:ComboBox>
                <materialDesign:PackIcon Grid.Column="0" Kind="BoxAdd"
                                         Width="24" Height="24"
                                         Margin="270,5,0,0"
                                         HorizontalAlignment="Left" VerticalAlignment="Top"
                                         Foreground="White"/>

                <hc:ComboBox Grid.Column="1" Width="200" Height="50" HorizontalAlignment="Left"
                             hc:InfoElement.Placeholder="Horário"
                             ItemsSource="{Binding HorariosDisponiveis}"
                             SelectedItem="{Binding NovoAgendamento.Horario}"
                             FontSize="20"/>
                <materialDesign:PackIcon Grid.Column="1" Kind="ClockOutline"
                                         Width="24" Height="24"
                                         Margin="170,5,0,0"
                                         HorizontalAlignment="Left" VerticalAlignment="Top"
                                         Foreground="White"/>
            </Grid>

            <!-- Linha 2: Tema e Valores -->
            <Grid Grid.Row="2" Grid.Column="0" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <hc:ComboBox Grid.Column="0" Width="300" Height="50" Margin="0,0,10,0"
                             hc:InfoElement.Placeholder="Tema"
                             Text="{Binding NovoAgendamento.Tema}"
                             FontSize="20">
                    <hc:AutoCompleteTextBoxItem Content="Safari"/>
                    <hc:AutoCompleteTextBoxItem Content="ToyStory"/>
                    <hc:AutoCompleteTextBoxItem Content="Fazendinha"/>
                </hc:ComboBox>
                <materialDesign:PackIcon Grid.Column="0" Kind="Theatre"
                                         Width="24" Height="24"
                                         Margin="270,5,0,0"
                                         HorizontalAlignment="Left" VerticalAlignment="Top"
                                         Foreground="White"/>

                <hc:TextBox Grid.Column="1" Width="150" Height="50"
                            hc:InfoElement.Placeholder="Valor"
                            Text="{Binding ValorPacote}"
                            FontSize="20"/>

                <hc:TextBox Grid.Column="2" Width="150" Height="50"
                            hc:InfoElement.Placeholder="Valor Pago"
                            FontSize="20"/>
            </Grid>

            <!-- Linha 3: Criança -->
            <Grid Grid.Row="3" Grid.Column="0" Margin="0,10,0,0">
                <hc:ComboBox Width="300" Height="50"
                             hc:InfoElement.Placeholder="Criança"
                             IsEditable="True" IsTextSearchEnabled="False"
                             LostFocus="ComboBox_LostFocus"
                             DisplayMemberPath="Nome"
                             ItemsSource="{Binding ListaClientes}"
                             Text="{Binding NovoCliente.Nome}"
                             FontSize="20"/>
                <materialDesign:PackIcon Kind="BabyFaceOutline"
                                         Width="24" Height="24"
                                         Margin="270,5,0,0"
                                         HorizontalAlignment="Left" VerticalAlignment="Top"
                                         Foreground="#FF00EDFF"/>
            </Grid>

            <!-- Calendário -->
            <StackPanel Grid.Row="0" Grid.RowSpan="4" Grid.Column="1"
                        Margin="20,0,0,0" HorizontalAlignment="Right">
                <Calendar Width="350" Height="300"
                          SelectedDate="{Binding DataSelecionada}"
                          Language="pt-br">
                    <Calendar.LayoutTransform>
                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                    </Calendar.LayoutTransform>
                </Calendar>
            </StackPanel>

            <!-- Linha 4: DataGrid e Botões -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,0,10,0">
                <DataGrid AutoGenerateColumns="False"
                          Height="200"
                          ItemsSource="{Binding ListaAgendamentos}"
                          SelectedItem="{Binding NovoAgendamento}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                        <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.Nome}" />
                        <DataGridTextColumn Header="Telefone" Binding="{Binding Cliente.Telefone}" />
                        <DataGridTextColumn Header="Pacote" Binding="{Binding Pacote}" />
                        <DataGridTextColumn Header="Tema" Binding="{Binding Tema}" />
                        <DataGridTextColumn Header="Horário" Binding="{Binding Horario}" />
                        <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=dd/MM/yyyy}" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,10,0">
                    <Button Content="Agendar"
                            Command="{Binding AgendarCommand}"
                            Width="180" Height="50"
                            FontWeight="Bold" FontSize="16"
                            Background="Green" Foreground="White"/>
                    <Button Content="Excluir"
                            Command="{Binding ExcluirCommand}"
                            Width="180" Height="50"
                            FontWeight="Bold" FontSize="16"
                            Background="Red" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>


