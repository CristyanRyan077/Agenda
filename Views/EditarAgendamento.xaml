<Window x:Class="AgendaNovo.Views.EditarAgendamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgendaNovo.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:vm="clr-namespace:AgendaNovo"
        d:DataContext="{d:DesignInstance Type=vm:AgendaViewModel}"
        mc:Ignorable="d"
        Title="EditarAgendamento" Height="450" Width="500">
    <Grid>
        <Grid Background="#333">
            <StackPanel Width="200">
                <TextBlock Text="Editar Agendamento"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
                
                <hc:TextBox IsReadOnly="True" Margin="10" hc:InfoElement.Placeholder="Cliente"
                         Text="{Binding ClienteSelecionado.Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Horário -->
                <hc:ComboBox ItemsSource="{Binding HorariosDisponiveis}" hc:InfoElement.Placeholder="Horario"
                      SelectedItem="{Binding HorarioTexto}" Width="150"/>

                <hc:ComboBox Name="txtservico"
                         IsEditable="True" IsTextSearchEnabled="True"
                        hc:InfoElement.Placeholder="Servico" Margin="10"
                         ItemsSource="{Binding ListaServicos}" DisplayMemberPath="Nome" SelectedValuePath="Id"
                         SelectedItem="{Binding ServicoSelecionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Pacote -->
                <hc:ComboBox ItemsSource="{Binding ListaPacotesFiltrada}"
                      SelectedItem="{Binding Pacoteselecionado}" hc:InfoElement.Placeholder="Pacote"
                      DisplayMemberPath="Nome"/>

                <!-- Tema -->
                <hc:TextBox Text="{Binding NovoAgendamento.Tema}" hc:InfoElement.Placeholder="Tema" Margin="10"/>

                <TextBlock Text="Valor:" HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,0"/>
                <TextBox Text="{Binding NovoAgendamento.Valor}" Width="200"/>
                <!-- Valor -->
                <TextBlock Text="Valor Pago:" HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,0"/>
                <TextBox Text="{Binding NovoAgendamento.ValorPago}" Width="200"/>

                <!-- Botões -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Excluir" Background="Red" Width="80" Command="{Binding ExcluirCommand}" />
                    <Button Content="Salvar" Background="Green" Width="80" Command="{Binding AgendarCommand}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
