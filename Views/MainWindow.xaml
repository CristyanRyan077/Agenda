                                    <Run Text="{Binding Horario}"/>
                                    <Run Text=")"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </hc:Card>
                                </StackPanel>
                            </Grid>

                            <!-- DOMINGO -->
                            <Grid Grid.Row="3" Grid.Column="1">
                                <StackPanel>
                                    <TextBlock Text="Domingo" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Width="154" Background="#FF13FF00" TextAlignment="Center" FontFamily="Segoe UI Black"/>
                                    <hc:Card x:Name="cardDomingo" Background="#8873B9F9"  Width="470" Height="300">
                                        <ItemsControl ItemsSource="{Binding AgendamentosDomingo}" HorizontalAlignment="Left">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="16"
                                                   FontFamily="Segoe UI Semibold"
                                                   Padding="4"
                                                   TextWrapping="Wrap">>>
                                    <Run Text="{Binding Cliente.Nome}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Pacote}"/>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding Data, StringFormat=dd/MM/yyyy}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Horario}"/>
                                    <Run Text=")"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </hc:Card>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

        <TabItem Header="Mensal">
                <Grid Margin="-6,0,0,0">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Imagens/baixados.jpeg"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="21*"/>
                        <ColumnDefinition Width="678*"/>
                        <ColumnDefinition Width="723*"/>
                    </Grid.ColumnDefinitions>

                    <Calendar Language="pt-br" Cursor="Hand" HorizontalAlignment="Left"
                              Margin="-132,24,0,0" VerticalAlignment="Top"
                              Height="328" Width="445" Grid.ColumnSpan="3">
                        <Calendar.LayoutTransform>
                            <ScaleTransform ScaleX="2.0" ScaleY="2.0"/>
                        </Calendar.LayoutTransform>
                    </Calendar>

                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"
                              Grid.Column="2" Grid.ColumnSpan="2" Margin="634,0,0,0"/>

                    <TextBlock x:Name="txtteste" Grid.Column="3" Visibility="Hidden"
                               HorizontalAlignment="Left" Margin="26,330,0,0"
                               TextWrapping="Wrap" Text="TextBlock"
                               VerticalAlignment="Top"/>
                </Grid>
            </TabItem>

        <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
    </TabControl>
</DockPanel>
 </Window>

