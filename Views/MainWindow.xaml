                                    <Run Text=" - "/>
                                    <Run Text="{Binding Pacote}"/>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding Data, StringFormat=dd/MM/yyyy}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Horario}"/>
                                    <Run Text=")"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </hc:Card>
                                </StackPanel>
                            </Grid>

                            <!-- QUINTA -->
                            <Grid Grid.Row="2" Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Text="Quinta" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Width="154" Background="#FF13FF00" TextAlignment="Center" FontFamily="Segoe UI Black"/>
                                    <hc:Card x:Name="cardQuinta" Background="#8873B9F9" Width="470" Height="400">
                                        <ItemsControl ItemsSource="{Binding AgendamentosQuinta}" HorizontalAlignment="Left">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="16"
                                                   FontFamily="Segoe UI Semibold"
                                                   Padding="4"
                                                   TextWrapping="Wrap">>>
                                    <Run Text="{Binding Cliente}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Pacote}"/>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding Data, StringFormat=dd/MM/yyyy}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Horario}"/>
                                    <Run Text=")"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </hc:Card>
                                </StackPanel>
                            </Grid>

                            <!-- SEXTA -->
                            <Grid Grid.Row="2" Grid.Column="1">
                                <StackPanel>
                                    <TextBlock Text="Sexta" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Width="154" Background="#FF13FF00" TextAlignment="Center" FontFamily="Segoe UI Black"/>
                                    <hc:Card x:Name="cardSexta" Background="#8873B9F9" Width="470" Height="400">
                                        <ItemsControl ItemsSource="{Binding AgendamentosSexta}" HorizontalAlignment="Left">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="16"
                                                   FontFamily="Segoe UI Semibold"
                                                   Padding="4"
                                                   TextWrapping="Wrap">>>
                                    <Run Text="{Binding Cliente}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Pacote}"/>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding Data, StringFormat=dd/MM/yyyy}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Horario}"/>
                                    <Run Text=")"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </hc:Card>
                                </StackPanel>
                            </Grid>

                            <!-- SABADO -->
                            <Grid Grid.Row="2" Grid.Column="2">
                                <StackPanel>
                                    <TextBlock Text="Sabado" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Width="154" Background="#FF13FF00" TextAlignment="Center" FontFamily="Segoe UI Black"/>
                                    <hc:Card x:Name="cardSabado" Background="#8873B9F9" Width="470" Height="400">
                                        <ItemsControl ItemsSource="{Binding AgendamentosSabado}" HorizontalAlignment="Left">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
